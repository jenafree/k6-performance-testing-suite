{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "k6"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "scripts/**/*.js",
    "utils/**/*.js", 
    "config/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "results",
    "docker"
  ]
}